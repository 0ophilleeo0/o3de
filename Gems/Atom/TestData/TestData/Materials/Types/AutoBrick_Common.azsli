#pragma once 

#include <Atom/Features/SrgSemantics.azsli>

ShaderResourceGroup AutoBrickSrg : SRG_PerMaterial
{
    // Shape...
    float m_brickWidth;
    float m_brickHeight;
    float m_lineWidth;
    float m_lineDepth;
    float m_brickOffset;

    // Appearance...
    float3 m_brickColor;
    float m_brickNoiseFactor;
    float3 m_lineColor;
    float m_lineNoiseFactor;
    float m_brickColorBleed;
    float m_aoFactor;
    float m_debugValue;
    float m_debugValueScale;
    
    Sampler m_sampler
    {
       AddressU = Wrap;
       AddressV = Wrap;
       MinFilter = Linear;
       MagFilter = Linear;
       MipFilter = Linear;
    };
    Texture2D m_noise;
}
